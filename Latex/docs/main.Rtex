  plot(1, type = "n", xlim = c(0, max(max(subset_1$time), max(subset_2$time))), ylim = c(min(baseline_pupil$baselinecorrectedp), max(baseline_pupil$baselinecorrectedp)),
       xlab = 'Tiempo', ylab = 'Tamaño Pupila Base', main = main_title)

