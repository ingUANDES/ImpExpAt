      group_by(Period) %>%
      summarize(cambioReturn = sprintf("%.2f%%", diff(as.numeric(gsub("%", "", return))) * 100))
    
    # Calculate the difference in 'normSP' for each period and format as percentage
    cambioNormSP <- data %>%
      group_by(Period) %>%
      summarize(cambioNormSP = sprintf("%.2f%%", diff(normSP) * 100))

    # Calculate the difference in 'ESGPond' for each period and format as percentage
    cambioPond <- data %>%
      group_by(Period) %>%
      summarize(cambioPond = sprintf("%.2f%%", diff(ESGPond) * 100))
@

